  body(ng-app="main")                                              
    #container
      h1(style="padding: 20px 0; width: 1197px; margin: 0 auto; background-color: grey; color:rgb(180,180,180)") I am working with the server currently. I apologize for possible inconvenience.
      #contIn
        div#header
            a#backtoMainPage(alt='back to Petr Borák main page', href="http://www.borakpetr.cz")
             h1 Petr Borák, webdevelopement, graphics, javascript.
            #ls

              #logIn
                - if(logged)
                    form(action="/session", method="POST")
                      input(type="hidden", name="_method", value="delete")
                      input#logOut(type="submit", value="Log out")
                - else
                    a(href="/session/new") Log In  
              #language
                a#englishHref(href=englishHref) English
                a#czechHref(href=czechHref) Czech                              
              #searchbox
                form(action="/search", method="get")
                  input#searchBox(type="text", name="search", value="")
                  input#submitSearch(type="submit", value="") 
              
                                

                
            #mainMenu
              ul
                li
                  -if(actualSite == "index") 
                    a(href="/", class="actual") about me
                  -else
                    a(href="/")   about me
                li
                  -if(actualSite == "portfolio")  
                    a(href="/portfolio/webdesign/", class="actual") portfolio
                  -else
                    a(href="/portfolio/webdesign/") portfolio
                  
                li
                  -if(actualSite == "blog")  
                    a(href="/blog", class="actual") blog    
                  -else
                    a(href="/blog") blog    
                
                  
            #bottomMenu
              ul
                li(class='samsung')
                  a(href='/samsungStv') samsungTv
                li(class='html')
                  a(href='/html5') html5
                li(class='node')
                  a(href='/node') node
                li(class='angular')
                  a(href='/angular') angular
                
                  
          
